
@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge bg-info badge-primary" style="float:right">
                <small>$@Model.Price.ToString()</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <b>Author:</b> @Model.Author <br />
        <b>Publisher: </b> @Model.Publisher<br />
        <b>ISBN:</b> @Model.Isbn<br />
        <b>Classification:</b> @Model.Classification<br />
        <b>Category: </b> @Model.Category<br />
        <b>Page Count:</b> @Model.PageCount<br />
    </div>

    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Purchase</button>
        </span>

    </form>
</div>