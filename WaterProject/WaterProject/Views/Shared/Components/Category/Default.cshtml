

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCat="" asp-route-pageNum=""
       class="btn btn-outline-secondary">Home</a>
    @foreach (string c in Model)
    {
        @*For the other bit of extra bootstrap I did, I made the category buttons a different color*@
        <a asp-controller="Home" asp-action="Index" asp-route-bookCat="@c" asp-route-pageNum=""
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")" style="background-color: rgb(143, 188, 143)">@c</a>
    }
</div>


